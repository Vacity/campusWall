<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:id="@+id/publishTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="填写标题"
        android:textSize="35px"
        android:minWidth="400px"
        android:gravity="center_horizontal"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageButton
        android:id="@+id/emotionTitleBtn"
        android:layout_width="90dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:textColor="#FFF"
        android:textSize="30px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:src="@drawable/emotiontwo"/>
    <ImageButton
        android:id="@+id/eventTitleBtn"
        android:layout_width="90dp"
        android:layout_margin="10dp"
        android:textSize="30px"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:src="@drawable/eventone"/>

        <ImageButton
            android:id="@+id/thingTitleBtn"
            android:layout_width="90dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:textColor="#FFF"
            android:textSize="30px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:src="@drawable/thingone" />
    </LinearLayout>


    <EditText
        android:id="@+id/publishContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:background="@null"
        android:inputType="none"
        android:hint="吐个槽..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="0.47" />

    <ImageView
        android:id="@+id/addIcon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/addicon"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        />



    <Button
        android:id="@+id/publishBtn"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/arc_button"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/publish_message"/>



</LinearLayout>