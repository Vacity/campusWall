<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team.nju.campuswall.Activity.EditProfile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textSize="20dp"
        android:id="@+id/nickName"
        android:layout_above="@+id/gender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="212dp"
        android:layout_height="25dp"
        android:id="@+id/text_nickName"
        android:background="@drawable/edittext_bg_selector"
        android:layout_toRightOf="@+id/nickName"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textSize="20dp"
        android:id="@+id/gender"
        android:layout_below="@+id/text_nickName"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:id="@+id/text_gender"
        android:background="@drawable/edittext_bg_selector"
        android:layout_alignBottom="@+id/gender"
        android:layout_alignLeft="@+id/text_nickName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱"
        android:textSize="20dp"
        android:id="@+id/mail"
        android:layout_below="@+id/gender"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="212dp"
        android:layout_height="25dp"
        android:id="@+id/text_mail"
        android:background="@drawable/edittext_bg_selector"
        android:singleLine="true"
        android:layout_alignBottom="@+id/mail"
        android:layout_toRightOf="@+id/mail"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个性签名"
        android:textSize="20dp"
        android:id="@+id/signature"
        android:layout_below="@+id/mail"
        android:layout_marginTop="28dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg_selector"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:id="@+id/text_signature"
        android:layout_below="@id/signature"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
