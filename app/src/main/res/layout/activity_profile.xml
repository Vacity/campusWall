<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile3"
    android:stretchColumns="0,2"
    tools:context="com.team.nju.campuswall.Activity.profileActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/profile_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="返回"
            android:layout_gravity="left"/>
    </android.support.v7.widget.Toolbar>

    <!-- name -->
    <TableRow android:layout_width="wrap_content">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="50px"
            android:textSize="45px"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:id="@+id/profile_username"
            android:text="某某某某某"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <!-- photoshape  不会做啊！-->
    <TableRow android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.team.nju.campuswall.View.CircleImageView
            android:id="@+id/photo"
            android:src="@drawable/photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <!-- school -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:src="@drawable/profile_change2"
            android:id="@+id/changeProfile"
            android:layout_column="0" />
        <TextView
            android:layout_width="400px"
            android:layout_height="60px"
            android:textSize="40px"
            android:id="@+id/profile_school"
            android:text="Nju"
            android:textColor="@color/profile"
            android:gravity="center"
            android:layout_column="1" />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/photo_change2"
            android:id="@+id/changePhoto"
            android:layout_column="0" />
    </TableRow>

    <!-- number -->

    <TableRow
        android:layout_marginTop="70dp">
        <TextView
            android:id="@+id/profile_product"
            android:text="123"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
        <TextView
            android:id="@+id/profile_join"
            android:text="1"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
        <TextView
            android:id="@+id/profile_star"
            android:text="234"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow>
        <TextView />
        <TextView
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:id="@+id/profile_signature"
            android:text="QQ:879950363  wechat:......."/>
        <TextView />

    </TableRow>
    <!-- 拍照、选择本地图片的底部悬浮菜单 -->
    <FrameLayout
        android:id="@+id/edit_photo_fullscreen_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"
        android:clickable="true"
        android:layout_gravity="bottom"
        android:focusable="true"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/edit_photo_outer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/edit_photo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/take_picture_layout_round_corner_bg"
                android:orientation="vertical" >
                <View style="@style/horizontal_divider" >
                </View>
                <TextView
                    android:id="@+id/take_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="拍照"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <View style="@style/horizontal_divider" >
                </View>

                <TextView
                    android:id="@+id/select_local_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="选择本地图片"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_photo_layout"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cancel_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/video_order_layout_round_corner_bg"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/cancle"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</TableLayout>


