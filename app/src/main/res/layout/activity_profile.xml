<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/profile2"
    android:stretchColumns="0,2"
    tools:context="com.team.nju.campuswall.Activity.profileActivity">

    <!-- photo  不会做啊！-->
    <TableRow>
        <TextView />
        <ImageView

            android:id="@+id/photo"
            />
        <TextView />
    </TableRow>

    <!-- name -->
    <TableRow>
        <TextView />
        <TextView
            android:layout_marginTop="290px"
            android:textSize="45px"
            android:layout_width="400px"
            android:layout_height="60px"
            android:id="@+id/profile_username"
            android:text="某某某某某"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView />
    </TableRow>


    <!-- school -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="1"
            android:src="@drawable/profile_change2"
            android:id="@+id/changeProfile"
            android:layout_column="0" />
        <TextView
            android:layout_width="400px"
            android:layout_height="60px"
            android:textSize="40px"
            android:id="@+id/profile_school"
            android:text="Nju"
            android:textColor="@color/profile"
            android:gravity="center"
            android:layout_column="1" />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="2"
            android:src="@drawable/photo_change2"
            android:id="@+id/changePhoto"
            android:layout_column="0" />
    </TableRow>


    <TableRow>
        <TextView />

        <TextView />
    </TableRow>

    <!-- number -->
    <TableRow>
        <TextView
            android:id="@+id/profile_product"
            />
        <TextView
            android:id="@+id/profile_join"
            />
        <TextView
            android:id="@+id/profile_star"
            />
    </TableRow>


</TableLayout>
